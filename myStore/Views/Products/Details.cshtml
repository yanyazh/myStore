@model myStore.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4" style="display: flex; justify-content: flex-start;">
    
    <div>
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid" />
            }
            else
            {
                <img src="/images/noImage.png" alt="No Image" class="img-fluid" />
            }
        </div>
        <h2>@Model.Name</h2>
        <h2><strong>Price:</strong> @Model.Price.ToString() zł</h2>
        <div class="col-md-6">
            <p><strong>Category: </strong> @Model.Category.Name</p>
            <p><strong>Description: </strong> @Model.Description</p>
            <p>
                <strong>Stock Quantity:</strong>
                @{
                    if (@Model.Stock > 0)
                        {
                            <span class="inStock">In Stock</span>
                        }
                        else
                        {
                            <span class="outOfStock">Out of Stock</span>
                        }
                    }
            </p>
            <a asp-action="Index" asp-controller="" class="btn btn-secondary mt-3">Back to Products</a>
        </div>
    </div>
</div>
